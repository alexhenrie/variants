<h2>Individual #{{model.id}}</h2>

<h3>Deleterious variants</h3>

<div>
  {{#each variant in model.deleterious}}
    <div>
      <a style="cursor: pointer" {{action goto variant.Start}}>{{variant.cosmicVariant.GeneName}} ({{variant.Start}} - {{variant.End}})</a>
    </div>
  {{/each}}
</div>

<h3>Variants</h3>

<div>
  {{input type="number" placeholder="Start" autofocus="autofocus" min="0" step="1000" value=variantRangeStart}}
  -
  {{input type="number" placeholder="End" min="0" step="1000" value=variantRangeEnd}}

  <div style="line-height: 0; margin-top: 12px;">
    {{view App.NucleotidesView start=variantRangeStart end=variantRangeEnd variants=variants}}
  </div>

  {{#if showcaseVariant}}
    <table class="table table-bordered table-striped" style="width: 400px;margin-top: 12px;">
      <tbody>
        <tr>
          <th>Reference sequence</th>
          <td>{{showcaseVariant.ReferenceSequence}}</td>
        </tr>
        <tr>
          <th>Variant sequence</th>
          <td>{{showcaseVariant.VariantSequence}}</td>
        </tr>
        <tr>
          <th>Strand</th>
          <td>{{showcaseVariant.Strand}}</td>
        </tr>
        <tr>
          <th>Type</th>
          <td>{{showcaseVariant.Type}}</td>
        </tr>
        <tr>
          <th>Range</th>
          <td>{{showcaseVariant.Start}} - {{showcaseVariant.End}}</td>
        </tr>

        {{#if showcaseVariant.thousandGenomeVariant}}
          <tr>
            <th>Variant frequency</th>
            <td>{{showcaseVariant.thousandGenomeVariant.VariantFrequency}}</td>
          </tr>
        {{/if}}

        {{#if showcaseVariant.cosmicVariant}}
          <tr>
            <th>Gene name</th>
            <td>{{showcaseVariant.cosmicVariant.GeneName}}</td>
          </tr>
          <tr>
            <th>Primary site</th>
            <td>{{showcaseVariant.cosmicVariant.PrimarySite}}</td>
          </tr>
          <tr>
            <th>Site subtype</th>
            <td>{{showcaseVariant.cosmicVariant.SiteSubtype}}</td>
          </tr>
          <tr>
            <th>Cosmic strand</th>
            <td>{{showcaseVariant.cosmicVariant.Strand}}</td>
          </tr>
          <tr>
            <th>Primary histology</th>
            <td>{{showcaseVariant.cosmicVariant.PrimaryHistology}}</td>
          </tr>
          <tr>
            <th>Histology subtype</th>
            <td>{{showcaseVariant.cosmicVariant.HistologySubtype}}</td>
          </tr>
          <tr>
            <th>Somatic status</th>
            <td>{{showcaseVariant.cosmicVariant.SomaticStatus}}</td>
          </tr>
        {{/if}}
      </tbody>
    </table>
  {{/if}}
</div>
